{
  "manifest": {
    "$BASE_DIR": ".",
    "$OUTPUT_DIR": "$BASE_DIR/output",
    "$INPUT_DIR": "$BASE_DIR/inputs"
  },

  "run": {
    "tstop": 3000.0,
    "dt": 0.1,
    "dL": 20.0,
    "spike_threshold": -15,
    "nsteps_block": 5000
  },

  "target_simulator":"NEURON",

  "conditions": {
    "celsius": 34.0,
    "v_init": -80
  },

  "inputs": {
    "LGN_units": {
      "input_type": "neuropixels",
      "module": "nwb",
      "input_file": "./ecephys_cache_dir/session_715093703/session_715093703.nwb",
      "node_set": "LGN",
      "mapping": "csv",
      "parameters": {
        "file_path": "./session_715093703_units_map.csv"
      }
    },
    "VISal_units": {
      "input_type": "neuropixels",
      "module": "nwb",
      "input_file": "./ecephys_cache_dir/session_715093703/session_715093703.nwb",
      "node_set": "VISal",
      "mapping": "sample_with_replace",
      "parameters": {
        "peak_channel_id": [100, 200, 300]
      }
    }
  },

  "output":{
    "log_file": "log.txt",
    "output_dir": "$OUTPUT_DIR",
    "spikes_file": "spikes.h5",
    "spikes_file_csv": "spikes.csv"
  },

  "reports": {
    "membrane_potential": {
      "cells": "bio_cells",
      "variable_name": "v",
      "module": "membrane_report",
      "sections": "soma"
    }
  },

  "networks": {
    "nodes": [
      {
        "nodes_file": "$NETWORK_DIR/VISp_nodes.h5",
        "node_types_file": "$NETWORK_DIR/VISp_node_types.csv"
      },
      {
        "nodes_file": "$NETWORK_DIR/LGN_nodes.h5",
        "node_types_file": "$NETWORK_DIR/LGN_node_types.csv"
      },
      {
        "nodes_file": "$NETWORK_DIR/VISal_nodes.h5",
        "node_types_file": "$NETWORK_DIR/VISal_node_types.csv"
      }
    ],

    "edges": [
      {
        "edges_file": "$NETWORK_DIR/VISp_VISp_edges.h5",
        "edge_types_file": "$NETWORK_DIR/VISp_VISp_edge_types.csv"
      },
      {
        "edges_file": "$NETWORK_DIR/LGN_VISp_edges.h5",
        "edge_types_file": "$NETWORK_DIR/LGN_VISp_edge_types.csv"
      },
      {
        "edges_file": "$NETWORK_DIR/VISal_VISp_edges.h5",
        "edge_types_file": "$NETWORK_DIR/VISal_VISp_edge_types.csv"
      }
    ]
  }
}
