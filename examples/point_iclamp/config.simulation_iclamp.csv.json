{
  "manifest": {
    "$BASE_DIR": ".",
    "$OUTPUT_DIR": "$BASE_DIR/output"
  },

  "run": {
    "tstop": 1500.0,
    "dt": 0.001
  },

  "target_simulator":"NEST",

  "inputs": {
    "current_clamp_1": {
      "input_type": "csv",
      "module": "IClamp",
      "node_set": "point_nodes",
      "file": "inputs/iclamp_inputs_1.csv"
    }
  },

  "output":{
    "log_file": "log.txt",
    "output_dir": "$OUTPUT_DIR",
    "spikes_file": "spikes.h5",
    "spikes_file_csv": "spikes.csv",
    "spikes_sort_order": "time",
    "quiet_simulator": true
  },

  "node_sets": {
  	"point_nodes": {
      "model_type": "point_neuron"
    },

    "exc_nodes": {
      "population": "FridayHarborBiophysics",
      "ei": "e"
    }
  },

  "reports": {
    "membrane_potential": {
      "cells": "point_nodes",
      "variable_name": "V_m",
      "module": "multimeter_report",
      "sections": "soma"
    }
  },

  "network": "config.circuit.json"
}
